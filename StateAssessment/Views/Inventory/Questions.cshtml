@model StateAssessment.Models.Inventory

@{
    ViewData["Title"] = (Model.SectionName + ": " + Model.InventoryName);
}

<div id="back-sec" class="mb-4">
    <div class="container">
        <a href="/inventory"><img src="~/icons/back.svg"> Go to all sections</a>
    </div>
</div>

<div id="intro-sec">
    <div class="container">
        <div class="intro-head"><h4><b> @Html.DisplayFor(model => model.SectionName):</b> @Html.DisplayFor(model => model.InventoryName)</h4></div>
        <div class="intro-instruction">
            <h6>INSTRUCTIONS</h6>
            @Html.Raw(Model.InventoryDescription)
            <a href="~/inventory/@Model.InventoryId/questions" class="cst-btn">Continue<img src="../../icons/right-arrow.svg"></a>
        </div>
    </div>
</div>



